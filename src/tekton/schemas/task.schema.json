{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tekton Task (subset)",
  "type": "object",
  "required": [
    "apiVersion",
    "kind",
    "metadata",
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "const": "Task"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "properties": {
        "params": {
          "type": "array"
        },
        "results": {
          "type": "array"
        },
        "steps": {
          "type": "array"
        }
      },
      "required": [
        "steps"
      ]
    }
  }
}